* SELECCIONA EMPRESA DE TRABAJO
*
CLOSE DATABASES
SET BELL         ON
SET CONFIRM      ON
SET CENTURY      ON
SET DATE BRITISH
SET DELETE       ON
SET DEBUG        OFF
SET ESCAPE       OFF
SET EXCLUSIVE    OFF
SET HELP         OFF
SET MESSAGE TO 23
SET SAFETY       OFF
SET SCOREBOARD   OFF
SET STAT         OFF
SET SYSMENU      OFF
SET TALK         OFF
SET UNIQUE       OFF
PUBLIC XCIA,NLPP,PATCC,PATIP,PATVT,PATCP,XPATCB,PATCH,PATOT,PATCM,XCOLOR,MES,XNIVEL,XTERMINAL,XFIRMA
XTERMINAL='12345678'
XNIVEL = 9
= INSMODE(.T.)
= NUMLOCK(.T.)
= CAPSLOCK(.T.)
DO PAS
DO WHILE .T.
   CLEAR
   DEFI POPUP POPEMPRESA FROM 10,20 TO 20,60 PROMPT FIELD NOMBRE
   ON SELECTION POPUP POPEMPRESA DEAC POPUP POPEMPRESA
   SELECT 1
   USE PEMPRESA
   SET CLOCK TO 4,35
   @ 4,1  TO 21,78 CLEAR
   @ 23,1 SAY SPACE(78)
   @ 5,16  TO 7,63 DOUBLE
   @ 6,17 SAY 'SELECCIONE LA EMPRESA EN LA CUAL VA A TRABAJAR'
   @ 22,9  TO 24,70 DOUBLE
   @ 23,10 SAY CHR(24)+' '+CHR(25)+' Seleccionar        ';
   +CHR(17)+CHR(196)+CHR(217)+' Confirmar        <ESC> Salir     '
   ACTI POPUP POPEMPRESA
   IF LASTKEY() = 27
      CLOSE DATABASES
      QUIT
      RETURN
   ENDIF
   PAT = TRIM(PATH)
   PATC = TRIM(DIRCOMUN)
   XPATCB = TRIM(DIRCONTA)
   SET PATH TO &PAT,&PATC,&XPATCB
   DO INMENU
ENDDO   
CLOSE DATABASES
RETURN
