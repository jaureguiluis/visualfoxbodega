*   menu principal del sistema COMERCIAL
*
CLOSE DATABASES
SET CENTURY ON
SET TALK OFF
SET STAT OFF
SET SCORE OFF
SET ESCAPE OFF
SET CONFIRM ON
SET EXCLUSIVE OFF
SET DELETE ON
PUBLIC XCIA,NLPP,FFFFFF,PATCC,PATIP,PATVT,PATCP,PATCB,PATOT,PATCM,XCOLOR,MES,XNIVEL,XTERMINAL,XFIRMA
XTERMINAL='12345678'
FFFFFF=DATE()
XNIVEL = 9
= INSMODE(.T.)
= NUMLOCK(.T.)
= CAPSLOCK(.T.)
DO PAS
STORE 0 TO O
DO WHILE .T.
   USE CONSE
   XCIA   = TRIM(CIA)
   PATIP  = TRIM(IP)
   PATVT  = TRIM(VT)
   PATCC  = TRIM(CC)
   PATCP  = TRIM(CP)
   PATCB  = TRIM(CB)
   PATCH  = TRIM(CH)
   PATCM  = TRIM(CM)
   PATOT  = TRIM(OT)
   PATC  = TRIM(COMUN)
   NLPP   = NLPP
   XCOLOR = COLOR
   XE = SIS
   USE
   SET CLOCK TO 21,35
   SET MESSAGE TO 23
   CLEAR PROGRAM
   CLEAR PROMPT
   clear
   @00,0 TO 24,79 DOUBLE
   @02,1 TO 02,78 DOUBLE
   @ 1,(78-LEN(XCIA))/2 SAY XCIA
   @04,22 SAY REPLICATE(CHR(31),37)
   SET COLOR TO 7*
   @05,23 SAY    'S E L E C T O R   P R I N C I P A L'
   SET COLOR TO &XCOLOR
   @07,24 SAY REPLICATE(CHR(176),32)
   @19,24 SAY REPLICATE(CHR(176),32)
   @08,24 SAY CHR(176)
   @09,24 SAY CHR(176)
   @10,24 SAY CHR(176)
   @11,24 SAY CHR(176)
   @12,24 SAY CHR(176)
   @13,24 SAY CHR(176)
   @14,24 SAY CHR(176)
   @15,24 SAY CHR(176)
   @16,24 SAY CHR(176)
   @17,24 SAY CHR(176)
   @18,24 SAY CHR(176)
   @08,55 SAY CHR(176)
   @09,55 SAY CHR(176)
   @10,55 SAY CHR(176)
   @11,55 SAY CHR(176)
   @12,55 SAY CHR(176)
   @13,55 SAY CHR(176)
   @14,55 SAY CHR(176)
   @15,55 SAY CHR(176)
   @16,55 SAY CHR(176)
   @17,55 SAY CHR(176)
   @18,55 SAY CHR(176)
   @20,34 TO 22,46 DOUBLE
   @08,25 PROMPT ' 1) -  VENTAS              ' ;
   MESSAGE CHR(186)+'   FACTURACION A CLIENTES                    '+SPACE(33)+CHR(186)
   @10,25 PROMPT ' 2) -  INVENTARIOS         ' ;
   MESSAGE CHR(186)+'   CONTROL DE PRODUCTOS DE VENTA             '+SPACE(33)+CHR(186)
   @12,25 PROMPT ' 3) -  CUENTAS POR COBRAR  ' ;
   MESSAGE CHR(186)+'   COBRANZA Y CARTERA DE CLIENTES            '+SPACE(33)+CHR(186)
   @14,25 PROMPT ' 4) -  CUENTAS POR PAGAR   ' ;
   MESSAGE CHR(186)+'   OBLIGACIONES PARA CON LOS PROVEEDORES     '+SPACE(33)+CHR(186)
   @15,25 PROMPT ' 5) -  CONTABILIDAD        ' ;
   MESSAGE CHR(186)+'   CAPTURA DE POLIZAS PARA CONTABILIDAD      '+SPACE(33)+CHR(186)
   @16,25 PROMPT ' 6) -  COMPRAS             ' ;
   MESSAGE CHR(186)+'   CAPTURA DE PEDIDOS Y COMPRAS DE PRODUCTOS '+SPACE(33)+CHR(186)
   @17,25 PROMPT ' 7) -  OTROS MODULOS       ' ;
   MESSAGE CHR(186)+'   PROCESOS Y MODULOS ESPECIALES             '+SPACE(33)+CHR(186)
   MENU TO O
   IF LASTKEY() = 27
     CLOSE ALL
     QUIT
     RETURN
   ENDIF
   DO CASE
   CASE O= 1
     SET PATH TO &PATVT,&PATIP,&PATCC,&PATCP,&PATCM
     DO VTMENU
   CASE O= 2
     SET PATH TO &PATIP,&PATCP,&PATCC,&PATC,&PATCM
     DO IPMENU
   CASE O = 3
     SET PATH TO &PATCC,&PATIP,&PATC
     DO CCMENU
   CASE O = 4
     SET PATH TO &PATCP
     DO CPMENU
   CASE O = 5
     SET PATH TO &PATCB,&PATOT,&PATIP,&PATCC,&PATVT,&PATC,&PAT
     DO CBMENU
   CASE O = 6
     SET PATH TO &PATIP,&PATCP,&PATCM,&PATC,&PAT
     DO CMMENU
   CASE O = 7
     SET PATH TO &PATOT,&PATCC,&PATIP,&PATC,&PAT
     DO OTMENU
   CASE O = 99
     RETURN
   ENDCASE
ENDDO

